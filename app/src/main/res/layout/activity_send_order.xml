<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdde1"
    tools:context=".sendOrder" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

        <TextView
            android:onClick="back"
            android:textSize="22sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:padding="3dp"
            android:text="تعديل"
            android:layout_margin="10sp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            tools:ignore="HardcodedText" />



        <TextView
            tools:ignore="HardcodedText"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تفاصيل الطلب"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

        <ImageView

            android:onClick="back"
            android:padding="5dp"
            android:rotation="90"
            android:tint="#fff"
            android:layout_gravity="right"
            android:layout_marginRight="20sp"
            android:id="@+id/imageView3"
            android:layout_width="40sp"
            android:layout_height="40sp"
            app:srcCompat="@drawable/arrow"
            tools:ignore="HardcodedText,RtlHardcoded"

            android:contentDescription="Go back" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20sp"
                android:background="@drawable/roundedbg"
                android:orientation="vertical"
                android:padding="10sp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView

                        android:gravity="right"
                        tools:ignore="HardcodedText,RtlHardcoded"
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ahmed"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        tools:ignore="HardcodedText"
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="الإسم"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10sp"
                    android:orientation="horizontal">

                    <TextView
                        tools:ignore="HardcodedText,RtlHardcoded"
                        android:gravity="right"

                        android:id="@+id/numberTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="05997000031"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText"
                        android:text="رقم الجوال"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ابل"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="نوع الجوال"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10sp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/modelTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ايفون اكس"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="مودل"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/problemTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="اصلاح شاشة"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="نوع المشكلة"
                        tools:ignore="HardcodedText"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="12dp">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/roundedbg"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:gravity="right"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    android:text="وصف المشكلة"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/problemDescriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    android:paddingBottom="40dp"
                    android:text="تغيير شاشة"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:onClick="send"
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="80dp"
                android:layout_marginBottom="20sp"
                android:background="@drawable/roundedbtn"
                android:padding="5dp"
                android:text="إرسال طلب"
                tools:ignore="HardcodedText"
                android:textColor="@android:color/white"
                android:textSize="26sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>